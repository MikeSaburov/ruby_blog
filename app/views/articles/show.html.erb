<h1><%= @article.title %></h1>
<button><%= link_to "На главную", root_path %></button>
<p><%= @article.body %></p>
<button><%= link_to "Редактировать", edit_article_path(@article) %></button>
<button><%= link_to "Удалить", article_path(@article), data: {
  turbo_method: :delete,
  turbo_confirm: "Вы действительно хотите удлить статью?"
} %></button>

<h2>Комментарии:</h2>
<% @article.comments.each do |comment| %>
  <p>
    <strong>Комментатор:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Комментарий:</strong>
    <%= comment.body %>
  </p>
<% end %>

<h2>Добавить комментарий:</h2>
<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <p>
    <%= form.label :commenter,'Автор комментария'%><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body, 'Текст комментария'%><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit 'Добавить'%>
  </p>
<% end %>