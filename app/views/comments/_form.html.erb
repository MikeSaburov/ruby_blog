<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <p>
    <%= form.label :commenter,'Автор комментария'%><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body, 'Текст комментария'%><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit 'Добавить'%>
  </p>
<% end %>